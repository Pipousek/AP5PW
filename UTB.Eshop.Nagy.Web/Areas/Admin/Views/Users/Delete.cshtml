@using UTB.Eshop.Nagy.Web.Models.Database.Configuration;
@model UTB.Eshop.Nagy.Web.Models.Identity.User

@{
    string firstNameCZEN, lastnameCZEN, usernameCZEN, normalizedUsernameCZEN;
    string emailCZEN, normalizedEmailCZEN, emailConfirmCZEN;
    string passHashCZEN, secureStampCZEN, concurrencyStampCZEN;
    string phoneCZEN, phoneConfirmCZEN, twoFacCZEN;
    string lockoutEndCZEN, lockoutEnableCZEN, accessFailCountCZEN;
    string buttonBack, buttonDelete;
    string titleCZEN, userCZEN, confirmCZEN;

    if (LanguageConfig.Language == "EN")
    {
        firstNameCZEN = "First Name";
        lastnameCZEN = "Last Name";
        usernameCZEN = "Username";
        normalizedUsernameCZEN = "Normalized Username";
        emailCZEN = "E-mail";
        normalizedEmailCZEN = "Normalized E-mail";
        emailConfirmCZEN = "E-mail Confirm";
        passHashCZEN = "Password Hash";
        secureStampCZEN = "Security Stamp";
        concurrencyStampCZEN = "Concurrency Stamp";
        phoneCZEN = "Phone";
        phoneConfirmCZEN = "Phone Confirm";
        twoFacCZEN = "Two-Factor Authentication";
        lockoutEndCZEN = "Lockout Endpoint";
        lockoutEnableCZEN = "Lockout Endpoint Enable";
        accessFailCountCZEN = "Access Fail Count";
        buttonBack = "Back to list";
        buttonDelete = "Delete";
        titleCZEN = "Delete user";
        userCZEN = "User";
        confirmCZEN = "Are you sure you want to delete this?";
    }
    else
    {
        firstNameCZEN = "Jméno";
        lastnameCZEN = "Příjmení";
        usernameCZEN = "Uživatelské jméno";
        normalizedUsernameCZEN = "Normalizované uživatelské jméno";
        emailCZEN = "E-mail";
        normalizedEmailCZEN = "Normalizovaný e-mail";
        emailConfirmCZEN = "E-mail potvrzen";
        passHashCZEN = "Hash uživatelského hesla";
        secureStampCZEN = "Bezpečnostní razítko";
        concurrencyStampCZEN = "Souběžné razítko";
        phoneCZEN = "Telefon";
        phoneConfirmCZEN = "Telefon potvrzen";
        twoFacCZEN = "Dvoufaktorová autentizace";
        lockoutEndCZEN = "Uzamčení koncového bodu";
        lockoutEnableCZEN = "Uzamčení koncového bodu povoleno";
        accessFailCountCZEN = "Počet selhání přístupu";
        buttonBack = "Zpět na seznam";
        buttonDelete = "Smazat";
        titleCZEN = "Smazat uživatele";
        userCZEN = "Uživatel";
        confirmCZEN = "Jste si jistí, že chcete smazat tuto položku?";
    }

    ViewData["Title"] = "Delete";
}

<h1>@titleCZEN</h1>

<h3>@confirmCZEN</h3>
<div>
    <h4>@userCZEN</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @firstNameCZEN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @lastnameCZEN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @usernameCZEN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @normalizedUsernameCZEN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NormalizedUserName)
        </dd>
        <dt class="col-sm-2">
            @emailCZEN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @normalizedEmailCZEN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NormalizedEmail)
        </dd>
        <dt class="col-sm-2">
            @emailConfirmCZEN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailConfirmed)
        </dd>
        <dt class="col-sm-2">
            @passHashCZEN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PasswordHash)
        </dd>
        <dt class="col-sm-2">
            @secureStampCZEN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecurityStamp)
        </dd>
        <dt class="col-sm-2">
            @concurrencyStampCZEN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConcurrencyStamp)
        </dd>
        <dt class="col-sm-2">
            @phoneCZEN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @phoneConfirmCZEN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumberConfirmed)
        </dd>
        <dt class="col-sm-2">
            @twoFacCZEN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TwoFactorEnabled)
        </dd>
        <dt class="col-sm-2">
            @lockoutEndCZEN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LockoutEnd)
        </dd>
        <dt class="col-sm-2">
            @lockoutEnableCZEN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LockoutEnabled)
        </dd>
        <dt class="col-sm-2">
            @accessFailCountCZEN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccessFailedCount)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@buttonDelete" class="btn btn-danger" /> |
        <a asp-action="Index">@buttonBack</a>
    </form>
</div>

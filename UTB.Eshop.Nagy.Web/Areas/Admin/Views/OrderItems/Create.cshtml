@using UTB.Eshop.Nagy.Web.Models.Database.Configuration;
@model UTB.Eshop.Nagy.Web.Models.Entities.OrderItem

@{
    string createCZEN, orderItemCZEN;
    string buttonBack, buttonSave;
    string orderIDCZEN, productIDCZEN, amountCZEN, priceCZEN;
    if (LanguageConfig.Language == "EN")
    {
        createCZEN = "Create";
        orderItemCZEN = "Order Item";
        buttonBack = "Back to list";
        buttonSave = "Submit";
        orderIDCZEN = "Order ID";
        productIDCZEN = "Product ID";
        amountCZEN = "Amount";
        priceCZEN = "Price";
    }
    else
    {
        createCZEN = "Vytvořit";
        orderItemCZEN = "Objednaná položka";
        buttonBack = "Zpět na seznam";
        buttonSave = "Potvrdit";
        orderIDCZEN = "ID Objednávky";
        productIDCZEN = "ID Produktu";
        amountCZEN = "Množství";
        priceCZEN = "Cena";
    }
    ViewData["Title"] = "Create";
}

<h1>@createCZEN</h1>

<h4>@orderItemCZEN</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderID" class="control-label">@orderIDCZEN</label>
                <select asp-for="OrderID" class ="form-control" asp-items="ViewBag.OrderID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label">@productIDCZEN</label>
                <select asp-for="ProductID" class ="form-control" asp-items="ViewBag.ProductID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">@amountCZEN</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">@priceCZEN</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@buttonSave" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@buttonBack</a>
</div>


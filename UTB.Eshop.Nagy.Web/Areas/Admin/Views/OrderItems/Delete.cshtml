@using UTB.Eshop.Nagy.Web.Models.Database.Configuration;
@model UTB.Eshop.Nagy.Web.Models.Entities.OrderItem

@{
	string amountCZEN, priceCZEN, orderCZEN, productCZEN;
	string buttonDelete, buttonBack, confirmCZEN, orderItemCZEN;
	if (LanguageConfig.Language == "EN")
	{
		amountCZEN = "Amount";
		priceCZEN = "Price";
		orderCZEN = "Order ID";
		productCZEN = "Product ID";
		buttonDelete = "Delete";
		buttonBack = "Back to list";
		confirmCZEN = "Are you sure you want to delete this?";
		orderItemCZEN = "Order item";
	}
	else
	{
		amountCZEN = "Množství";
		priceCZEN = "Cena";
		orderCZEN = "ID Objednávky";
		productCZEN = "ID Produktu";
		buttonDelete = "Smazat";
		buttonBack = "Zpět na seznam";
		confirmCZEN = "Jste si jistí, že chcete smazat tuto položku?";
		orderItemCZEN = "Objednaná položka";
	}
    ViewData["Title"] = "Delete";
}

<h1>@buttonDelete</h1>

<h3>@confirmCZEN</h3>
<div>
    <h4>@orderItemCZEN</h4>
    <hr />
    <dl class="row">
		<dt class="col-sm-2">
			<!-- @Html.DisplayNameFor(model => model.Amount) -->
			@amountCZEN
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Amount)
		</dd>
		<dt class="col-sm-2">
			<!-- @Html.DisplayNameFor(model => model.Price) -->
			@priceCZEN
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Price)
		</dd>
		<dt class="col-sm-2">
			<!-- @Html.DisplayNameFor(model => model.Order) -->
			@orderCZEN
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Order.OrderNumber)
		</dd>
		<dt class="col-sm-2">
			<!-- @Html.DisplayNameFor(model => model.Product) -->
			@productCZEN
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Product.ID)
		</dd>
	</dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="@buttonDelete" class="btn btn-danger" /> |
        <a asp-action="Index">@buttonBack</a>
    </form>
</div>
